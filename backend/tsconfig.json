{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@tourdeal-backend/context-storage": [
        "libs/context-storage/src"
      ],
      "@tourdeal-backend/context-storage/*": [
        "libs/context-storage/src/*"
      ],
      "@tourdeal-backend/database": [
        "libs/database/src"
      ],
      "@tourdeal-backend/database/*": [
        "libs/database/src/*"
      ],
      "@tourdeal-backend/logger": [
        "libs/logger/src"
      ],
      "@tourdeal-backend/logger/*": [
        "libs/logger/src/*"
      ],
      "@tourdeal-backend/shared": [
        "libs/shared/src"
      ],
      "@tourdeal-backend/shared/*": [
        "libs/shared/src/*"
      ],
      "@tourdeal-backend/swagger": [
        "libs/swagger/src"
      ],
      "@tourdeal-backend/swagger/*": [
        "libs/swagger/src/*"
      ]
    }
  },
  "exclude": [
    ".examples/*",
    ".planner/*"
  ]
}
